version: '3.8'
services:
  minio:
    image: quay.io/minio/minio
    ports:
      - 9000:9000
      - 9090:9090
    user: "${UID}:${GID}"
    environment:
      - MINIO_ROOT_USER=ROOTUSER
      - MINIO_ROOT_PASSWORD=CHANGEME123
    volumes:
      - ${HOME}/minio/data:/data
    command: server /data --console-address ":9090"
